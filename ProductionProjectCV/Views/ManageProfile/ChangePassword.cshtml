@model Services.AggregateModel.ChangePasswordModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Manage Profile Info</h2>
<hr />
<form class="form-horizontal" action="@Url.Action("ChangePassword","ManageProfile")" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-sm-2 col-lg-2">Old Password</label>
        <div class="col-sm-10 col-lg-10">
            @Html.TextBoxFor(model => model.Password,new { @class="form-control"})
        </div>
        <label class="control-label col-sm-2 col-lg-2">New Password</label>
        <div class="col-sm-10 col-lg-4">
            @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
        <label class="control-label col-sm-2 col-lg-2">Confirm Password</label>
        <div class="col-sm-10 col-lg-4">
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success"><span class="fa fa-save"> Save</span></button>
        </div>
    </div>
    <div style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
        @if (ViewBag.Message != null)
            { <span>@ViewBag.Message</span>}
    </div>
</form>
