@model Services.Model.VisibilitySettingModel
@{
    ViewBag.Title = "SetVisibility";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Set Privacy</h2>

<hr />

<form class="form-horizontal" action="@Url.Action("SetVisibility","ManageProfile")" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-sm-2 col-lg-2">Show Email</label>
        <div class="col-sm-10 col-lg-10">
            @Html.CheckBoxFor(model => model.ShowEmail, new { @class = "checkbox" })
            @*<input type="text" class="form-control" name="ResumeTitle" placeholder="Enter title of Resume">*@
        </div>
        <label class="control-label col-sm-2 col-lg-2">Show Address</label>
        <div class="col-sm-10 col-lg-4">
            @Html.CheckBoxFor(model => model.Address, new { @class = "checkbox" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2 col-lg-2">Show Mobile</label>
        <div class="col-sm-10 col-lg-10">
            @Html.CheckBoxFor(model => model.Mobile, new { @class = "checkbox" })
            @*<input type="text" class="form-control" name="ResumeTitle" placeholder="Enter title of Resume">*@
        </div>
        <label class="control-label col-sm-2 col-lg-2">Show Website</label>
        <div class="col-sm-10 col-lg-4">
            @Html.CheckBoxFor(model => model.Website, new { @class = "checkbox" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2 col-lg-2">Show Jobs</label>
        <div class="col-sm-10 col-lg-10">
            @Html.CheckBoxFor(model => model.Jobs, new { @class = "checkbox" })
            @*<input type="text" class="form-control" name="ResumeTitle" placeholder="Enter title of Resume">*@
        </div>
        <label class="control-label col-sm-2 col-lg-2">Show Education</label>
        <div class="col-sm-10 col-lg-4">
            @Html.CheckBoxFor(model => model.Eduction, new { @class = "checkbox" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2 col-lg-2">Show Skills</label>
        <div class="col-sm-10 col-lg-10">
            @Html.CheckBoxFor(model => model.Skills, new { @class = "checkbox" })
            @*<input type="text" class="form-control" name="ResumeTitle" placeholder="Enter title of Resume">*@
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success"><span class="fa fa-save"> Save</span></button>
        </div>
    </div>
    <div style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
        @if (ViewBag.Message != null)
            { <span>@ViewBag.Message</span>}
    </div>
</form>