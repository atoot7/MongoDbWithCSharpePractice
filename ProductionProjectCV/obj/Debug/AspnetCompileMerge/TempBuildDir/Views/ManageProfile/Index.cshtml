@using System.Web.UI.WebControls
@model Services.Model.ResumeModel

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Profile Info</h2>
<hr />
<form class="form-horizontal" action="@Url.Action("Index","ManageProfile")" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-sm-2 col-lg-2">Public Name</label>
        <div class="col-sm-10 col-lg-4">
            @Html.TextBoxFor(model => model.PublicName, new { @class = "form-control" })
            @*<input type="text" class="form-control" name="ResumeTitle" placeholder="Enter title of Resume">*@
        </div>
        <label class="control-label col-sm-2 col-lg-2">Fullname</label>
        <div class="col-sm-10 col-lg-4">
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
            @*<input type="text" class="form-control" name="ResumeTitle" placeholder="Enter title of Resume">*@
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2 col-lg-2">Profile Image</label>
        <div class="col-sm-10 col-lg-4">
            <input type="file" name="ImageFile" />
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success"><span class="fa fa-save"> Save</span></button>
        </div>
    </div>
</form>
