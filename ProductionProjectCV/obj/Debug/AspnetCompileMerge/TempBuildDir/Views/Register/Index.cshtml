@model Services.Model.ResumeModel
@{
    ViewBag.Title = "Registration Page";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="/index2.html"><b>Resume</b>PORTAL</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Sign Up</p>
        <form action="@Url.Action("Index","Register")" method="post">
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.PublicName, new { @class = "form-control", @Placeholder = "Public Link Name" ,@required="required"})
            </div>
            <div class="form-group has-feedback">
                @Html.DropDownListFor(m => m.Category, DropDownServicesEnum.CategoryList(), new { @class = "form-control select2", @required = "required" })
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Username/Email", @required = "required" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Placeholder = "Password", @required = "required" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.Password("ConfirmPassword", "", new { @class = "form-control", @Placeholder = "Confirm Password", @required = "required" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign Up</button>
                    @*<a href="@Url.Action("Index","Register")" class="btn btn-primary btn-block btn-flat">Sign Up</a>*@
                </div>
                <!-- /.col -->
            </div>
            <div class="row">
                <!-- /.col -->
                <p class="danger">@ViewBag.Message</p>
                <p class="danger">@Html.ValidationMessageFor(m => m.Email)</p>
                <p class="danger">@Html.ValidationMessageFor(m => m.Password)</p>
                <!-- /.col -->
            </div>
        </form>
        @*<div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Sign in using
                    Facebook
